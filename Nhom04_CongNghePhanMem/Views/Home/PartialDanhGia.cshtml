@model List<Nhom04_CongNghePhanMem.Models.DANHGIA>



@if (Model != null && Model.Count > 0)
{
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-12">
                <div class="card shadow-sm rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>@item.KHACHHANG.HOTENKH</strong>  
                            <small class="text-muted">@item.NGAYDG</small>
                        </div>
                        <div class="mb-2">
                            <span class="text-warning fs-5">
                                @for (int i = 0; i < item.SOSAO; i++)
                                {
                                    <span>★</span>
                                }
                                @for (int i = item.SOSAO; i < 5; i++)
                                {
                                    <span style="color:#ccc">★</span>
                                }
                            </span>
                        </div>
                        <p class="mb-0">@item.NOIDUNG</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info rounded-3" role="alert">
        Chưa có đánh giá nào cho sản phẩm này.
    </div>
}
